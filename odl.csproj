    <ApplicationIcon />
    <StartupObject />
    <Authors>Marijn Herrebout</Authors>
    <Platforms>Debgu;x86;x64</Platforms>
    <Version>0.1.0</Version>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x86'">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
